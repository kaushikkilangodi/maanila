<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Payment Details</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #1b75cf;
    }

    .navbar{
    height:90px;
    background-color:#0C359E;
    width:100%;
    display:flex;
    justify-content:space-around;
    align-items:center;
   }

   .heading{
    width:500px;
    text-align:center;
    font-family:'Times New Roman', Times, serif;
    font-size: 50px;
    font-weight: bold;
    color:rgb(182, 208, 54);
  }

  #home {
  height: 40px;
  width:100px;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  background-color: rgb(6, 151, 6);
  color: aliceblue;
  font-weight: bold;
  font-size: 12px;
  margin-left: 30px;
  margin-top: 15px;
}

    .container {
      max-width: 800px;
      margin: 20px auto;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      padding: 30px;
      background-color: #fff;
    }

    h3 {
      text-align: center;
      margin-bottom: 20px;
    }

    .form-label {
      font-weight: bold;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }
    #error{
        margin-left: 40%;
        color: rgb(162, 236, 14);
        font-size: larger;
        font-family: 'Times New Roman', Times, serif;
        font-weight: bolder;
    }

    ::-webkit-scrollbar {
  width: 4px;
}
::-webkit-scrollbar-track {
  background: #efe6e6;
}

  </style>
</head>
<body>
  <div class="navbar">
   
    <a href="/home" ><button class="menu-button" id="home" >
      HOME
  </button></a>  

  <div class="heading">Jai Shree Ram</div>

  <a href="/create_acc" ><button class="menu-button" id="home" >
   CREATE ACCOUNT
</button></a>  

</div>

<div class="container">
  <h3>User Payment Details</h3>
  <div id="paymentForm">
    <div class="form-group">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" id="username" name="username" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block" onclick="calculatePaymentDetails()">Submit</button>
  </div>

  <table id="netAmountsTable">
    <tr>
      <th>Year</th>
      <th>Net Amounts Donation</th>
      <th>Net Amounts Monthly</th>
      <th>Net Amounts Yearly</th>
    </tr>
  </table>
</div>

<div id="error"></div>


<script>
  async function calculatePaymentDetails() {
    const username = document.getElementById('username').value;

    try {
      const response = await fetch('/calculate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ username: username })
      });

      if (!response.ok) {
  const message = document.getElementById('error');
  message.innerHTML = 'User Dont Have Account or Invalid Input';
  return;
}
          const message = document.getElementById('error');
          message.innerHTML = '';

      const data = await response.json();
      renderTable(data);
    } catch (error) {
      console.error('Error:', error);
    }
  }

  function renderTable(data) {
    const table = document.getElementById('netAmountsTable');

    const allYears = new Set([
      ...Object.keys(data.netAmountsDonation),
      ...Object.keys(data.netAmountsMonthly),
      ...Object.keys(data.netAmountsYearly)
    ]);

    allYears.forEach(year => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${year}</td>
        <td>${data.netAmountsDonation[year] || 0}</td>
        <td>${data.netAmountsMonthly[year] || 0}</td>
        <td>${data.netAmountsYearly[year] || 0}</td>
      `;
      table.appendChild(row);
    });
  }
</script>

</body>
</html>
